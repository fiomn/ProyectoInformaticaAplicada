<head>
    <link rel="stylesheet" type="text/css" src="/style.css"/>
</head>

<html>
<body id="bodyLogin">
    <section>
        <form asp-action="Login" method="post">
            <div class="login">
                <h2>Sign In</h2>

                <div class="inputBox">
                    <input type="text" autocomplete="off" placeholder="Username" />
                    <div class="msg">
                        <span class="err"></span>
                    </div>
                </div>
                <div class="inputBox">
                    <input type="password" autocomplete="off" placeholder="Password" />
                    <div class="msg">
                        <span class="err"></span>
                    </div>
                </div>
                @if (TempData["msg"] != null)
                {
                    <div class="msg">
                        <span class="err">@TempData["msg"]</span>
                    </div>
                }
                <div class="inputBox">
                    <input type="submit" value="login" id="btn">
                </div>
                <div class="group">
                    <a asp-controller="userAuthentication" asp-action="recoveryPassword">Forgot your password?</a>
                    <a href="/UserAuthentication/Registration">Sign Up</a>
                </div>
            </div>
        </form>
    </section>
</body>
</html>