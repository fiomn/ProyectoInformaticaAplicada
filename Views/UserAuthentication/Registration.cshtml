
<!DOCTYPE html>

<head>
    <link rel="stylesheet" type="text/css" src="/style.css" />
</head>

<html>
<body id="bodyRegis">
    <section>
        <form asp-action="Registration" method="post">
            <div class="regis">
                <h2>Registration</h2>
                <div class="inputBoxR">
                    <input type="text" autocomplete="off" placeholder="Name" >
                    <span class="text-danger"></span>
                </div>
                <div class="inputBoxR">
                    <input type="text" autocomplete="off" placeholder="UserName">
                    <span class="text-danger" ></span>
                </div>
                <div class="inputBoxR">
                    <input type="text" autocomplete="off" placeholder="Email" >
                    <span class="text-danger" ></span>
                </div>
                <div class="inputBoxR">
                    <input type="password" autocomplete="off" placeholder="Password" >
                    <span class="text-danger"></span>
                </div>
                <div class="inputBoxR">
                    <input type="password" autocomplete="off" placeholder="Password Confirm" >
                    <span class="text-danger" ></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="inputBox">
                    <input type="submit" value="Sign Up" id="btn">
                </div>
                <div class="groupP">
                    <a href="/UserAuthentication/Login">Login</a>
                </div>


            </div>
        </form>

    </section>
</body>
</html>

